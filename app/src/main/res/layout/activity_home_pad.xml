<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/pad_radio_bg"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/tab_radio_group"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_person"
                android:layout_width="69dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/personal_img"/>

            <RadioButton
                android:id="@+id/radio_home"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:background="@drawable/radio_bg"
                android:button="@null"
                android:drawableTop="@drawable/tab_top_01"
                android:gravity="center"
                android:text="@string/over_view"
                android:textColor="@drawable/tab_text_color" />

            <RadioButton
                android:id="@+id/radio_ele"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:button="@null"
                android:padding="10dp"
                android:background="@drawable/radio_bg"
                android:drawableTop="@drawable/tab_top_02"
                android:layout_gravity="center"
                android:text="@string/ele_gen"
                android:textColor="@drawable/tab_text_color"
                android:gravity="center"/>

            <RadioButton
                android:id="@+id/radio_energy"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:button="@null"
                android:padding="10dp"
                android:background="@drawable/radio_bg"
                android:drawableTop="@drawable/tab_top_03"
                android:layout_gravity="center"
                android:text="@string/energy_consume"
                android:textColor="@drawable/tab_text_color"
                android:gravity="center"/>

            <RadioButton
                android:id="@+id/radio_analyze"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:button="@null"
                android:padding="10dp"
                android:background="@drawable/radio_bg"
                android:drawableTop="@drawable/tab_top_04"
                android:layout_gravity="center"
                android:text="@string/analyze"
                android:textColor="@drawable/tab_text_color"
                android:gravity="center"/>
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="@string/sunny"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:drawableLeft="@mipmap/weather_sun"
            android:drawableStart="@mipmap/weather_sun" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlue"
            android:text="@string/temperature"
            android:layout_margin="5dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlue"
            android:text="@string/wind"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>