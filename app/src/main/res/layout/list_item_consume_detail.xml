<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="35dp">

    <TextView
        android:id="@+id/zone_consume_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#57bceb"
        android:textSize="15sp"
        android:text="@string/all"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/zone_consume_list_item"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="15dp"
        android:background="@drawable/item_shape_yellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp" />

    <TextView
        android:id="@+id/zone_consume_list_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText_04"
        android:layout_marginLeft="10dp"
        android:text="@string/text_14"
        android:textSize="11sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/zone_consume_list_item"
        android:layout_marginStart="10dp"
        tools:ignore="SmallSp" />
</android.support.constraint.ConstraintLayout>