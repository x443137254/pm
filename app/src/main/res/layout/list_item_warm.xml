<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:ignore="ContentDescription"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/warm_item_time"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/text_25"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_bg_06"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorWhite"/>
    
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/frame2">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/frame_past"/>

        <ImageView
            android:id="@+id/warm_item_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/notice_02"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" />

        <TextView
            android:id="@+id/warm_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="80dp"
            android:text="@string/text_25"
            android:layout_marginStart="80dp" />

        <TextView
            android:id="@+id/warm_item_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText_04"
            android:text="@string/text_25"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="49dp"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp" />

        <TextView
            android:id="@+id/warm_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="74dp"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:text="@string/text_25"
            android:textColor="@color/colorText_04"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>