<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/modify_phone_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:scaleType="center"
            android:src="@mipmap/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/modify_phone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg_08"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_05"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText_07"
            android:text="@string/text_34"
            android:layout_margin="3dp"
            android:paddingLeft="15dp"
            android:paddingStart="15dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:text="@string/old_phone"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:inputType="phone"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:hint="@string/input_phone"
            android:textColorHint="@color/colorText_01" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg_08"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_bg_08"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_05"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText_07"
            android:text="@string/text_34"
            android:layout_margin="3dp"
            android:paddingLeft="15dp"
            android:paddingStart="15dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:text="@string/new_phone"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:inputType="phone"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:hint="@string/input_new_phone"
            android:textColorHint="@color/colorText_01" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg_08"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_05"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText_07"
            android:text="@string/text_34"
            android:layout_margin="3dp"
            android:paddingLeft="15dp"
            android:paddingStart="15dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:text="@string/verification_code"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@null"
            android:inputType="number"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:hint="@string/input_verification_code"
            android:textColorHint="@color/colorText_01" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/get_verification_code"
            android:gravity="center"
            android:background="@drawable/round_dark_blue_edg"
            android:textColor="@color/colorText_01"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg_08"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="40dp"
        android:textColor="@color/colorWhite"
        android:text="@string/confirm"
        android:gravity="center"
        android:background="@drawable/blue_bt_shape_hight"/>
</LinearLayout>
