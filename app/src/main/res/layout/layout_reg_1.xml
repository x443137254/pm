<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#07455A"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#cc011f28"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView style="@style/star_style"/>

        <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:text="@string/phone_email"/>

        <EditText
            android:id="@+id/reg_input_phone_email"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:inputType="phone"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textColor="@color/colorText_04"
            android:hint="@string/input_phone_email"
            android:textColorHint="@color/colorText_04" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#07455A"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#07455A"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#cc011f28"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView style="@style/star_style"/>

        <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:text="@string/pwd"/>

        <EditText
            android:id="@+id/reg_input_pwd"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:inputType="phone"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textColor="@color/colorText_04"
            android:hint="@string/input_pwd"
            android:textColorHint="@color/colorText_04" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#07455A"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#cc011f28"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView style="@style/star_style"/>

        <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:text="@string/confirm_pwd"/>

        <EditText
            android:id="@+id/reg_input_pwd_again"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:inputType="phone"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textColor="@color/colorText_04"
            android:hint="@string/input_pwd_again"
            android:textColorHint="@color/colorText_04" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#07455A"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#07455A"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#cc011f28"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView style="@style/star_style"/>

        <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:text="@string/company_name"/>

        <EditText
            android:id="@+id/reg_company_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textColor="@color/colorText_04"
            android:hint="@string/input_company_name"
            android:textColorHint="@color/colorText_04" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#07455A"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#07455A"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cc011f28"
        android:orientation="horizontal">

        <TextView style="@style/star_style"/>

        <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:text="@string/country"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/country_item"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/country"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/colorText_04"
                    android:layout_gravity="center"
                    android:text="中国"/>

                <ImageView
                    android:id="@+id/country_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/down_blue"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#07455A"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/province"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/colorText_04"
                    android:text="广东"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/province_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/down_blue"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#07455A"/>

                <TextView
                    android:id="@+id/city"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/colorText_04"
                    android:text="深圳"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/city_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/down_blue"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#07455A"/>

                <TextView
                    android:id="@+id/area"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/colorText_04"
                    android:text="福田区"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/area_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/down_blue"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#07455A"/>

            <EditText
                android:id="@+id/address_detail"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@null"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/colorText_04"
                android:hint="@string/address_detail"
                android:textColorHint="@color/colorText_04" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#07455A"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#07455A"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#cc011f28"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView style="@style/star_style"/>

        <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:text="@string/language"/>

        <TextView
            android:id="@+id/language"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="中文"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText_04"/>

        <ImageView
            android:id="@+id/language_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/down_blue"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#07455A"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#07455A"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#cc011f28"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView style="@style/star_style"/>

        <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:text="@string/installer_sn"/>

        <EditText
            android:id="@+id/installer_sn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/colorText_04"
            android:hint="@string/input_installer_sn"
            android:textColorHint="@color/colorText_04" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#07455A"/>

    <CheckBox
        android:id="@+id/agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:checked="true"
        android:gravity="center"
        android:button="@drawable/agreement_check"
        android:textColor="@color/colorWhite"
        android:text="@string/agreement" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/login_bt_shape_gray"
            android:text="@string/cancel"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/next_step"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/login_bt_shape"
            android:text="@string/next_step"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>