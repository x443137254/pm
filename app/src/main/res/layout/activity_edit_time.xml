<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@mipmap/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_time"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/save"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textColor="@color/colorWhite"
            android:text="@string/save"
            android:background="@drawable/blue_bt_shape"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg_08"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:background="@color/color_bg_05"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/start_h"
            style="@style/TextStyle_27"
            android:hint="@string/h"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text=":"
            android:layout_margin="9dp"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/start_m"
            style="@style/TextStyle_27"
            android:hint="@string/m"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="â€”"
            android:layout_margin="9dp"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/end_h"
            style="@style/TextStyle_27"
            android:hint="@string/h"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text=":"
            android:layout_margin="9dp"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/end_m"
            style="@style/TextStyle_27"
            android:hint="@string/m"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg_08"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/delete"
        android:layout_width="117dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@drawable/text_bg_05"
        android:text="@string/delete"
        android:layout_marginBottom="150dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"/>
</LinearLayout>
