<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/modify_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:scaleType="center"
            android:src="@mipmap/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_title"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/modify_confirm"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textColor="@color/colorWhite"
            android:text="@string/confirm"
            android:background="@drawable/blue_bt_shape"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/color_bg_08"/>

    <EditText
        android:id="@+id/modify_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_05"
        android:hint="@string/input_content"
        android:gravity="center_vertical"
        android:textColorHint="@color/color_bg_08"
        android:textColor="@color/colorText_04"
        android:padding="12dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg_08"/>
</LinearLayout>
