<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg"
    tools:ignore="ContentDescription"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/add_price_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:layout_margin="10dp"
            android:text="@string/add_price"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorWhite"
            android:text="@string/save"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_margin="10dp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <LinearLayout
        android:id="@+id/price_classify_item"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@color/color_bg_05"
        android:orientation="horizontal">

        <TextView
            style="@style/TextStyle_28"
            android:text="@string/price_classify"/>

        <TextView
            android:id="@+id/price_classify_text"
            style="@style/TextStyle_29"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/more"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@color/color_bg_05"
        android:orientation="horizontal">

        <TextView
            style="@style/TextStyle_28"
            android:text="@string/price_name"/>

        <EditText
            android:id="@+id/price_name"
            style="@style/TextStyle_29"
            android:background="@null"
            android:textSize="15sp"
            android:inputType="text"
            android:textColorHint="@color/colorText_04"
            android:hint="@string/input_price_name"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@color/color_bg_05"
        android:orientation="horizontal">

        <TextView
            style="@style/TextStyle_28"
            android:text="@string/price"/>

        <EditText
            android:id="@+id/price"
            style="@style/TextStyle_29"
            android:background="@null"
            android:inputType="numberDecimal"
            android:hint="@string/input_price"
            android:textColorHint="@color/colorText_04"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText_04"
            android:text="@string/text_03"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/color_bg_05"
        android:orientation="horizontal">

        <TextView
            style="@style/TextStyle_28"
            android:text="@string/time"/>

        <android.support.v7.widget.GridLayout
            android:id="@+id/time_array"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:columnCount="2"/>

        <TextView
            android:id="@+id/add_time"
            android:layout_width="48dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/add_time"
            android:background="@drawable/text_bg_04"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorWhite"
            android:layout_marginEnd="10dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <LinearLayout
        android:id="@+id/effectiveTime"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@color/color_bg_05"
        android:orientation="horizontal">

        <TextView
            style="@style/TextStyle_28"
            android:text="@string/valid_time"/>

        <TextView
            android:id="@+id/effective_time_text"
            style="@style/TextStyle_29"
            android:text="@string/forever"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/more"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <LinearLayout
        android:id="@+id/is_effective"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@color/color_bg_05"
        android:orientation="horizontal">

        <TextView
            style="@style/TextStyle_28"
            android:text="@string/take_effect"/>

        <TextView
            android:id="@+id/is_effective_text"
            style="@style/TextStyle_29"
            android:text="@string/yes"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/more"
            android:layout_margin="10dp"/>
    </LinearLayout>
</LinearLayout>
